.home-block
	sizeElement(100%, 100vh)
	background-image url(../images/backgrounds/image-01.jpg)
	@extend $backgroundPosition

	&:after
		@extend $purpleShadow

	.carousel-block
		@extend $mainContainer
		position relative
		padding-top 35vh
		z-index 2

	.slide__caption
		position relative
		@extend $centerText
		margin-bottom 56px

		&:after
			@extend $smallDivider
			bottom -24px

	.slide__description
		color $white
		@extend $centerText
		@extend $centerElementMargin
		max-width 90%

	.slide__link
		@extend $accentLink
		margin 50px auto 0 auto

	.slick-dots
		margin-top 19vh
		@extend $centerText

		li
			display inline-block
			&:not(last-child) button
				margin-right 5px
			&.slick-active button
				background-color $accentColor
				border-color $accentColor

			button
				font-size 0
				sizeElement(10px, 10px)
				border 1px solid $white
				border-radius 50%
				background-color transparent
				@extend $transitionDefault
				cursor pointer

