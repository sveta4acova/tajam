*
	box-sizing border-box
	margin 0
	padding 0
	outline none
	border none
	list-style-type none

body
	font-family "Roboto-Light"
	background-color $purple
	@extend $defaultFontSize
	line-height 1.7

a
	color $white
	@extend $transitionDefault
	text-decoration none

	&:hover
		color $accentColor
	&:active, &:visited
		color: $white

