.clients-block
	@media screen and (max-width: 767px)
		.clients-block__feedback,
		.clients-block__group
			width 100%

		.logo
			width 40%
			max-width none
			&:nth-child(odd)
				margin-right 20%
			img
				max-width 162px

		@media screen and (orientation: landscape)
			.logo
				width 20%
				&:nth-child(odd)
					margin-right 0
				padding-right 3%
				&:nth-child(5),
				&:nth-child(10)
					padding-right 0





